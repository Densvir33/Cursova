<Window x:Class="MailClient.LoginConfirmedPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailClient"
        mc:Ignorable="d"
         Title="C-Mail - Login" Height="200" Width="200">
    <Grid>
        <Label x:Name="LoggedInConfirmedTextLabel" Content="Logged in!" Margin="50,25,42,90" FontSize="16"/>
        <Button x:Name="CloseButton" Content="Close" HorizontalAlignment="Left" Margin="50,108,0,0" VerticalAlignment="Top" Width="100" FontSize="16" Click="CloseButton_Click" IsDefault="True"/>

    </Grid>
</Window>
