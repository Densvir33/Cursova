<Window x:Class="MailClient.EncryptionPasswordPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailClient"
        mc:Ignorable="d"
         Title="C-Mail - Login" Height="175" Width="375" ResizeMode="NoResize">
	<Grid  Background="LightSlateGray" >
        <Label x:Name="EncryptionPasswordLabel" Content="Encryption Password:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16"/>
        <PasswordBox x:Name="EncryptionPasswordPasswordBox" HorizontalAlignment="Left" Margin="174,10,0,0" VerticalAlignment="Top" TabIndex="1" FontSize="16" Width="176" Height="31"/>
        <Button x:Name="LoginButton" Content="Login!" HorizontalAlignment="Left" Margin="275,83,0,0" VerticalAlignment="Top" Width="75" FontSize="16" TabIndex="2" Click="LoginButton_Click"/>
        <Button x:Name="CloseButton" Content="Close" HorizontalAlignment="Left" Margin="10,83,0,0" VerticalAlignment="Top" Width="75" FontSize="16" TabIndex="2" Click="CloseButton_Click"/>

    </Grid>
</Window>
