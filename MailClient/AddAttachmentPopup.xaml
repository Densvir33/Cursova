<Window x:Class="MailClient.AddAttachmentPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailClient"
        mc:Ignorable="d"
        Title="C-Mail - Add attachment" Height="150" Width="415">
	<Grid  Background="LightSlateGray" >
        <Label x:Name="FilepathLabel" Content="File path:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="AttachmentFilepathTextBox" HorizontalAlignment="Left" Height="31" Margin="89,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="293" FontSize="16" TabIndex="1" Tag="" ToolTip="Fill in the filepath of your attachment here."/>
        <Button x:Name="CloseButton" Content="Close" HorizontalAlignment="Left" Margin="15,75,0,0" VerticalAlignment="Top" Width="75" FontSize="16" Click="CloseButton_Click" TabIndex="6" ToolTip="Close this window."/>
        <Button x:Name="EnterButton" Content="Add" HorizontalAlignment="Left" Margin="307,75,0,0" VerticalAlignment="Top" Width="75" FontSize="16" Click="EnterButton_Click" TabIndex="6" ToolTip="Add this attachment to your email."/>

    </Grid>
</Window>
